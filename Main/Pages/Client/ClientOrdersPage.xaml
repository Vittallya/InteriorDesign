        </StackPanel>-->

        <Button 
            Command="{Binding BackCommand}"
            Grid.Row="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Padding="45 8"
            Foreground="White"
            FontWeight="Bold"
            Style="{StaticResource ButtonNext}"
            Margin="25 0 0 0"
            Content="Назад"/>

        <!--<Button 
            Command="{Binding BackCommand}"
