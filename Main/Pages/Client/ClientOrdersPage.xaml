<Page x:Class="Main.Pages.Client.ClientOrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main.Pages.Client"
      mc:Ignorable="d" 
      DataContext="{Binding Source={StaticResource Locator},Path=ClientOrdersViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientOrdersPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="75" />

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock 
                Grid.Row="0" 
                Text="Мои заказы" 
                VerticalAlignment="Center"
                Margin="15 0"
                FontSize="24" FontFamily="Candara"/>



<!--5275-->
        
        <ListView 
                BorderBrush="{x:Null}"
                Grid.Row="1"
                Margin="25 0"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ItemsSource="{Binding Orders}" 
                SelectedItem="{Binding SelectedOrderItem}">


            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel >
                        <TextBlock 
                                    x:Name="text"
                                Foreground="Black"
                                FontSize="16"
                                >
                            <Run FontWeight="DemiBold" 
                                 Text="{Binding Order.StartWorkingDate, StringFormat='dd.MM.yyyy'}"/>
                            <Run  Text="{Binding Order.Service.Name}"/>
                        </TextBlock>
                        

                        <TextBlock 
                                    x:Name="text2"
                                Margin="0 5"
                                Foreground="Black"
                                FontSize="14"
                                TextWrapping="Wrap"                            
                                Text="{Binding Order.CommonCost}"/>

                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
            

